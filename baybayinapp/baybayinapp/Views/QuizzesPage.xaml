<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="baybayinapp.Views.QuizzesPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource BGL}, Dark={StaticResource BGD}}"
             Shell.FlyoutBehavior="Disabled"
             Title="Baybayin App">
    <ScrollView>
        <StackLayout>
            <StackLayout VerticalOptions="Start" Padding="20">
                <Image Source="{AppThemeBinding Light=imgPagsusulitL, Dark=imgPagsusulitD}" VerticalOptions="Start" Margin="0, 20"/>
            </StackLayout>
            <StackLayout BackgroundColor="{AppThemeBinding Light={StaticResource ThemeL2}, Dark={StaticResource ThemeD2}}" Padding="20, 20, 20, 10" Margin="20">
                <ImageButton x:Name="Q1" Source="btnPagsusulit1G" VerticalOptions="CenterAndExpand" Clicked="Quiz1Clicked" Margin="0, 0, 0, 5"/>
                <ImageButton x:Name="Q2" Source="btnPagsusulit2G" VerticalOptions="CenterAndExpand" Clicked="Quiz2Clicked" Margin="0, 0, 0, 5"/>
                <ImageButton x:Name="Q3" Source="btnPagsusulit3G" VerticalOptions="CenterAndExpand" Clicked="Quiz3Clicked" Margin="0, 0, 0, 5"/>
                <ImageButton x:Name="Q4" Source="btnPagsusulit4G" VerticalOptions="CenterAndExpand" Clicked="Quiz4Clicked" Margin="0, 0, 0, 5"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>